{
  "name": "data-preview",
  "displayName": "data-preview",
  "description": "datas list preview",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:wavetrace.vcd"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "wavetrace.vcd",
        "displayName": "WaveTrace VCD",
        "selector": [
          {
            "filenamePattern": "*.vcd"
          }
        ]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.showData",
          "group": "navigation",
          "when": "editorTextFocus",
          "title": "showData"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.showData",
        "title": "我是右键菜单"
      },
      {
        "command": "vcdPreview.showPreview",
        "title": "Preview VCD File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myPluginContainer",
          "title": "My Plugin",
          "icon": "static/icon.svg"
        }
      ]
    },
    "views": {
      "myPluginContainer": [
        {
          "id": "myPluginView",
          "name": "My Plugin View",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "vcd-parser": "^1.0.1"
  }
}
